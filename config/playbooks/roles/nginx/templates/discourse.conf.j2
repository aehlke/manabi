# {{ ansible_managed }}

server {
    listen 80;
    server_name {{ discourse_hostname }};

    location / {
        proxy_pass http://localhost:{{ discourse_port }};
        proxy_redirect http://unix:{{ discourse_location }}/shared/standalone/nginx.http.sock: http://$server_name;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
